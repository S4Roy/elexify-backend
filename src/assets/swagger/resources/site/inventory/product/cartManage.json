{
  "description": "Schema for cart using form-data",
  "content": {
    "multipart/form-data": {
      "schema": {
        "type": "object",
        "required": ["product_id", "quantity"],
        "properties": {
          "product_id": {
            "type": "string",
            "pattern": "^[0-9a-fA-F]{24}$",
            "description": "Product ID (MongoDB ObjectId)"
          },
          "quantity": {
            "type": "integer",
            "minimum": 1,
            "maximum": 1000,
            "description": "Quantity must be between 1 and 1000"
          }
        }
      }
    }
  }
}
