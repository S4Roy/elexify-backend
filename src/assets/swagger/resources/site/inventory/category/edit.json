{
  "description": "Schema for editing a category using form-data",
  "content": {
    "multipart/form-data": {
      "schema": {
        "type": "object",
        "required": ["_id"],
        "properties": {
          "_id": {
            "type": "string",
            "pattern": "^[0-9a-fA-F]{24}$",
            "description": "Category ID (MongoDB ObjectId)"
          },
          "name": {
            "type": "string",
            "minLength": 2,
            "maxLength": 100,
            "description": "Category name (optional for partial update)"
          },
          "description": {
            "type": "string",
            "maxLength": 500,
            "nullable": true,
            "description": "Category description (optional)"
          },
          "parent_category": {
            "type": "string",
            "pattern": "^[0-9a-fA-F]{24}$",
            "nullable": true,
            "description": "Parent category ID (optional, must be a valid MongoDB ObjectId)"
          },
          "image": {
            "type": "string",
            "format": "binary",
            "description": "Category image file (optional)"
          },
          "status": {
            "type": "string",
            "enum": ["active", "inactive"],
            "description": "Category status (optional, defaults to active)"
          }
        }
      }
    }
  }
}
