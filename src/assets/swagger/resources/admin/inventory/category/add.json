{
  "description": "Schema for adding a new category using form-data",
  "content": {
    "multipart/form-data": {
      "schema": {
        "required": ["name"],
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "minLength": 2,
            "maxLength": 100
          },
          "description": {
            "type": "string",
            "maxLength": 500,
            "nullable": true
          },
          "parent_category": {
            "type": "string",
            "nullable": true
          },
          "image": {
            "type": "string",
            "format": "binary",
            "nullable": true
          },
          "status": {
            "type": "string",
            "enum": ["active", "inactive"],
            "default": "active"
          }
        }
      }
    }
  },
  "required": true
}
